    <None Update="Resources\Themes\TreeViewEx.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

  <Import Project="..\FileExplorer.Shared\FileExplorer.Shared.projitems" Label="Shared" />
</Project>