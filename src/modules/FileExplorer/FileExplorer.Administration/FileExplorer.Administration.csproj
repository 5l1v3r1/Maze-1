<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <PropertyGroup>
    <LanguageTargets>$(MSBuildExtensionsPath)\$(VisualStudioVersion)\Bin\Microsoft.CSharp.targets</LanguageTargets>
    <TargetFramework>net47</TargetFramework>
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>
    <Description>Interact with the user.</Description>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <!-- XAML elements -->
    <Page Include="**\*.xaml" Exclude="App.xaml">
      <SubType>Designer</SubType>
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </Page>
    <None Remove="Resources\Generic.xaml" />
    <None Remove="Views\NavigationBarView.xaml" />
    <PackageReference Include="MahApps.Metro.IconPacks.Material" Version="2.3.0" />
    <ProjectReference Include="..\..\..\Orcus.Administration.Library\Orcus.Administration.Library.csproj" />
    <Compile Update="**\*.xaml.cs" SubType="Code" DependentUpon="%(Filename)" />

    <!-- Resources -->

    <!-- Settings -->

  </ItemGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Xaml" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\NavigationBarView.xaml.cs">
      <DependentUpon>NavigationBarView.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Views\NavigationBarView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\ControlThemes.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\BreadcrumbTree.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\BreadcrumbTreeItem.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\Buttons.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\Colors.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\ComboBox.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\DropDown.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\HotTrack.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\ModernTrack.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\SuggestBox.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Resources\Themes\Switch.xaml">
      <Generator>MSBuild:Compile</Generator>
