    <PackageReference Include="BCrypt.Net-Next" Version="2.1.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orcus.Modules.Api\Orcus.Modules.Api.csproj" />
  </ItemGroup>

</Project>
